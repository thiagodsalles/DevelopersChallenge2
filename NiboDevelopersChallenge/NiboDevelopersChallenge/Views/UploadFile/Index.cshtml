@model NiboDevelopersChallenge.Models.UploadFile

@{
    ViewBag.Title = "Nibo Conciliation Challenge";
}

<h2>Upload Your OFX Files</h2>


@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="input-group">
        <div class="custom-file">
            <input type="file" class="custom-file-input" name="UploadFiles" id="UploadFiles" aria-describedby="inputGroupFileAddon04" multiple>
            <label class="custom-file-label" for="UploadFiles">Choose Your Multiple OFX files</label>
        </div>
        <div class="input-group-append">
            <button class="btn btn-success" type="submit" id="inputGroupFileAddon04" value="Upload">Upload</button>
        </div>
    </div>

}

