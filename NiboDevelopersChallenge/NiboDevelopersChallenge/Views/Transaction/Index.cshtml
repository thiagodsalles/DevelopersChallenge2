@model IEnumerable<NiboDevelopersChallenge.Models.Transaction>

@{
    ViewBag.Title = "Nibo Conciliation Challenge";
}

<h2>Transactions</h2>

<!-- Show transactions in table with bootstrap hoverable rows for better identification -->
<table class="table table-hover mt-2">
    <thead>
        <tr>
            <th scope="col">Operation</th>
            <th scope="col">Date</th>
            <th scope="col">Value</th>
            <th scope="col">Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.TransType)</td>
                <td>@Html.DisplayFor(modelItem => item.TransDate)</td>
                <td>@Html.DisplayFor(modelItem => item.TransValue)</td>
                <td>@Html.DisplayFor(modelItem => item.TransDescription)</td>
            </tr>
        }
    </tbody>
</table>